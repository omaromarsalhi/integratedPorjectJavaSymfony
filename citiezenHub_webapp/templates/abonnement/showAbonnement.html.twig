{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/popUp.css') }}">
    <link rel="stylesheet" href="{{ asset('css/abonnement.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/AbonnementScript.js') }}"></script>
    <script src="{{ asset('js/TransportScript.js') }}"></script>
{% endblock %}

{% block body %}

    <div class="rn-breadcrumb-inner ptb--30">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 col-12">
                    <h5 class="title text-center text-md-start">My Subscriptions</h5>
                </div>
            </div>
        </div>
    </div>

    <div class="rn-banner-area">
        <div class="slider-activation-banner-4 game-banner-short-slick-wrapper slick-arrow-style-one rn-slick-dot-style">


            {% if l|length > 0 %}
            {% for abonnement in l %}
                <div class="slider-style-7 border-radious-none bg_image--2 pt--150 pb--190 pt_sm--70 pb_sm--70 bg_image"
                     data-black-overlay="6">
                    <div class="rn-banner-wrapper g-5 row">
                        <div class="col-xl-4 col-lg-12 col-12 order-3 order-xl-1 order-sm-1">
                            <a href="product-details.html">
                                <h2 class="title pl--30">
                                    {{ abonnement.Nom }}
                                    {{ abonnement.Prenom }}
                                    <br>
                                </h2>
                                <h2 class="title pl--30">
                                    <span>{{ abonnement.TypeAbonnement }}</span>
                                </h2>
                            </a>
                        </div>
                        <div class="col-xl-6 col-lg-12 col-12 order-2 order-xl-2 order-sm-2">
                            <div class="item-description">
                                <div class="product-share-wrapper"></div>
                                <div class="row d-flex justify-content-center">
                                    <div class="col col-md-9 col-lg-7 col-xl-7">
                                        <div class="abncontainer">
                                            {% set tabColor = abonnement.TypeAbonnement == 'Annuel' ? '#c0a264' : '#61ff25' %}
                                            {% set tabColorLight = abonnement.TypeAbonnement == 'Annuel' ? '#fef6b3' : '#90ee90' %}
                                            <div class="cover" style="background-color: {{ tabColorLight }};">
                                                <img src="{{ asset('/usersImg/'~ abonnement.image ) }}" style="height: 180px; width: 180px; margin-top: 30px; margin-left: 60px;" />
                                                <div class="title-area">
                                                    <div class="abnTimer">
                                                        <div class="countdown" data-date="{{ abonnement.dateFin }}">
                                                            <div class="countdown-container days">
                                                                <span class="countdown-value days-bottom">285</span>
                                                                <span class="countdown-heading days-top">Day</span>
                                                            </div>
                                                            <div class="countdown-container hours">
                                                                <span class="countdown-value hours-bottom">09</span>
                                                                <span class="countdown-heading hours-top">Hr's</span>
                                                            </div>
                                                            <div class="countdown-container minutes">
                                                                <span class="countdown-value minutes-bottom">30</span>
                                                                <span class="countdown-heading minutes-top">Min's</span>
                                                            </div>
                                                            <div class="countdown-container seconds">
                                                                <span class="countdown-value seconds-bottom">15</span>
                                                                <span class="countdown-heading seconds-top">Sec</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="new-container" style="border-left-color: {{ tabColor }};">
                                                <div class="green-tab" style="background-color: {{ tabColor }};">
                                                    {% for i in 0..6 %}
                                                        <div class="light-tab" style="background-color: {{ tabColorLight }};"></div>
                                                    {% endfor %}
                                                </div>
                                                <div class="emblem">
                                                    <img src="{{ asset('images/transports/transtu.png') }}" style="width: 90px; height: 82px" />
                                                </div>
                                                <h3 class="name-text">SUBSCRIPTION</h3>
                                                <div style="margin-top: 60px">
                                                    <p class="text1" style="color: #0a0b0f">Name: {{ abonnement.nom }}</p>
                                                    <p class="text1" style="color: #0a0b0f">LastName: {{ abonnement.Prenom }}</p>
                                                </div>
                                                <div class="title-area1">
                                                    <p class="text2" style="color: #0a0b0f">00{{ abonnement.id }}</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
                <div class="slider-style-7 border-radious-none bg_image--2 pt--150 pb--190 pt_sm--70 pb_sm--70 bg_image"
                     data-black-overlay="6">
                    <div class="rn-banner-wrapper g-5 row">
                        <div class="col-xl-4 col-lg-12 col-12 order-3 order-xl-1 order-sm-1">

                        </div>
                        <div class="col-xl-6 col-lg-12 col-12 order-2 order-xl-2 order-sm-2">
                            <div class="item-description">
                                <div class="product-share-wrapper"></div>
                                <div class="row d-flex justify-content-center">
                                    <div class="col col-md-9 col-lg-7 col-xl-7">
                                        <div data-sal="slide-up " data-sal-delay="150" data-sal-duration="800" style="height: 400px !important;" class="rn-service-one color-shape-7 sal-animate">
                                            <div class="inner">
                                                <div class="icon">
                                                    <img src="{{ asset('assets/images/icons/shape-7.png')}}" alt="Shape"></div>
                                                <div class="subtitle">  Add Subscritpion </div>
                                                <div class="content">
                                                    <h4 class="title"><a href="{{ path('app_addAbonnement') }}">Buy a now subscription from here</a></h4>
                                                    <p class="description">You can  Add a new Subscribtion in few minutes and in a fast way click here
                                                        to get it for you your friend or family .</p>
                                                    <a class="read-more-button" href="{{ path('app_addAbonnement') }}"><i class="feather-arrow-right"></i></a>
                                                </div>
                                            </div>
                                            <a class="over-link" href="{{ path('app_addAbonnement') }}"></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            {% else %}
                <div class="slider-style-7 border-radious-none bg_image--2 pt--150 pb--190 pt_sm--70 pb_sm--70 bg_image"
                     data-black-overlay="6">
                    <div class="rn-banner-wrapper g-5 row">
                        <div class="col-xl-4 col-lg-12 col-12 order-3 order-xl-1 order-sm-1">

                        </div>
                        <div class="col-xl-6 col-lg-12 col-12 order-2 order-xl-2 order-sm-2">
                            <div class="item-description">
                                <div class="product-share-wrapper"></div>
                                <div class="row d-flex justify-content-center">
                                    <div class="col-xxl-6 col-lg-4 col-md-6 col-sm-6 col-12">
                                        <div data-sal="slide-up" data-sal-delay="150" data-sal-duration="800" class="rn-service-one color-shape-7 sal-animate">
                                            <div class="inner">
                                                <div class="icon">
                                                    <img src="assets/images/icons/shape-7.png" alt="Shape"></div>
                                                <div class="subtitle">No subscriptions</div>
                                                <div class="content">
                                                    <h4 class="title"><a href="{{ path('app_addAbonnement') }}">No Subscriptions Found</a></h4>
                                                    <p class="description">You can  get your first subscrition in few minutes and in a fast way click here
                                                        to get your first one .</p>
                                                    <a class="read-more-button" href="{{ path('app_addAbonnement') }}"><i class="feather-arrow-right"></i></a>
                                                </div>
                                            </div>
                                            <a class="over-link" href="{{ path('app_addAbonnement') }}"></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

        </div>
    </div>

    <style>
        .abncontainer {
            display: flex;
            border-radius: 30px;
            overflow: hidden;
            width: 600px;
        }
        .cover,
        .new-container {
            width: 300px;
            height: 400px;
            position: relative;
        }
        .new-container {
            background-color: white;
            border-radius: 0 20px 20px 0;
            width: 380px;
        }
        .title-area {
            background-color: #fffaf0;
            width: 280px;
            height: 90px;
            position: absolute;
            bottom: 50px;
            left: 10px;
            border-radius: 5px;
        }
        .title-area1 {
            background-color: #fffaf0;
            width: 190px;
            height: 40px;
            position: absolute;
            bottom: 30px;
            left: 85px;
            border-radius: 5px;
        }
        .green-tab {
            width: 30px;
            height: 400px;
            position: absolute;
            left: 0;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            align-items: center;
            padding: 10px 0;
        }
        .light-tab {
            width: 30px;
            height: 30px;
        }
        .emblem {
            position: absolute;
            top: 5px;
            right: 0;
            font-family: "Arial", sans-serif;
        }
        .name-text {
            font-family: "Souliyo", sans-serif;
            font-weight: normal;
            text-align: center;
            color: black;
            margin-top: 92px;
        }
        .text1 {
            font-family: "Souliyo", sans-serif;
            font-weight: normal;
            margin-left: 40px;
            color: black;
            font-size: 20px;
        }
        .text2 {
            font-family: "Souliyo", sans-serif;
            font-weight: normal;
            color: black;
            margin-top: 10px;
            margin-left: 70px;
            font-size: 20px;
        }
        .text3 {
            font-family: "Souliyo", sans-serif;
            font-weight: normal;
            color: black;
            margin-left: 10px;
            font-size: 20px;
        }
        .abnTimer {
            margin-top: 23px;
            margin-right: 23px;
        }
        .bg_image--2 {
            background-image: url('/images/transport/trans.gif');
            background-size: cover;
            background-position: center;
        }
    </style>

{% endblock %}
