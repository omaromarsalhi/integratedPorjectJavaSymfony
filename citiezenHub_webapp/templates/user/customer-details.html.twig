{% extends 'index.html.twig' %}
{% block body %}
    <script src="{{ asset('js/userScript.js') }}"></script>
    <div class="content">
        <nav class="mb-2" aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="#!">Page 1</a></li>
                <li class="breadcrumb-item"><a href="#!">Page 2</a></li>
                <li class="breadcrumb-item active">Default</li>
            </ol>
        </nav>
        <div class="mb-9">
            <div class="row align-items-center justify-content-between g-3 mb-4">
                <div class="col-auto">
                    <h2 class="mb-0">Customer details</h2>
                </div>
                <div class="col-auto">
                    <div class="row g-3">
                        <div class="col-auto"><a class="btn btn-phoenix-danger"   href="{{path('Delete',{email:user.email})}}"><span class="fa-solid fa-trash-can me-2"></span>Delete customer</a></div>
                    </div>
                </div>
            </div>









            <div class="row g-5 d-flex justify-content-center align-items-center " style="margin-top: 100px">

                <div class="col-12 col-xxl-10 ">
                    <div class="row g-3 g-xxl-0 h-100">
                        <div class="col-12 col-md-7 col-xxl-12 mb-xxl-3">
                            <div class="card mb-5">
                                <div class="card-header hover-actions-trigger position-relative mb-6" style="min-height: 130px; ">
                                    <div class="bg-holder rounded-top" style="background-image: linear-gradient(0deg, #000000 -3%, rgba(0, 0, 0, 0) 83%) ,url(  {{ asset('images/user/coverImg.png') }} ); "><input class="d-none" id="upload-settings-cover-image" type="file" /><label class="cover-image-file-input" for="upload-settings-cover-image"></label>
                                        <div class="hover-actions end-0 bottom-0 pe-1 pb-2 text-white dark__text-gray-1100"><span class="fa-solid fa-camera me-2"></span></div>
                                    </div><input class="d-none" id="upload-settings-porfile-picture" type="file" /><label class="avatar avatar-4xl status-online feed-avatar-profile cursor-pointer" for="upload-settings-porfile-picture"><img class="rounded-circle img-thumbnail shadow-sm border-0" data-gallery="gallery-posts-1" src="{{ asset('usersImg/' ~ user.image) }}" width="200" alt="" /></label>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="d-flex flex-wrap mb-2 align-items-center">
                                                <h3 class="me-2">{{ user.firstName }}  {{ user.lastName }}</h3>
                                            </div>
                                            <div class="d-flex d-xl-block d-xxl-flex ">
                                                <div class="d-flex mb-xl-2 mb-xxl-0"><span class="fa-solid fa-user-group fs-10 me-2 me-lg-1 me-xl-2"></span>
                                                    <h6 class="d-inline-block mb-0 me-4"><span class="fw-semibold ms-1 pe-1 pb-2 ">Gender : </span>{{ user.gender }}</h6>
                                                </div>
                                                <div class="d-flex mb-xl-2 mb-xxl-0"><span class="fa-solid fa-user-check fs-10 me-2 me-lg-1 me-xl-2"></span>
                                                    <h6 class="d-inline-block mb-0 me-4"><span class="fw-semibold ms-1 ">Status : </span>{{ user.status }}</h6>
                                                </div>
                                                <div class="d-flex mb-xl-2 mb-xxl-0"><span class="fa-solid fa-user-check fs-10 me-2 me-lg-1 me-xl-2"></span>
                                                    <h6 class="d-inline-block mb-0 me-4"><span class="fw-semibold ms-1 ">Municipalite : </span>3971</h6>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>

                <div class="col-12 col-xxl-10">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center" style="font-size: 20px">Email<span class="badge badge-phoenix badge-phoenix-primary rounded-pill">{{user.email}}</span></li>
                        <li class="list-group-item d-flex justify-content-between align-items-center" style="font-size: 20px">Address<span class="badge badge-phoenix badge-phoenix-primary rounded-pill">{{ user.address }}</span></li>
                        <li class="list-group-item d-flex justify-content-between align-items-center" style="font-size: 20px">Phone<span class="badge badge-phoenix badge-phoenix-primary rounded-pill">{{ user.phoneNumber }}</span></li>
                        <li class="list-group-item d-flex justify-content-between align-items-center" style="font-size: 20px">Cin<span class="badge badge-phoenix badge-phoenix-primary rounded-pill">{{ user.cin }}</span></li>
                        <li class="list-group-item d-flex justify-content-between align-items-center" style="font-size: 20px">Age<span class="badge badge-phoenix badge-phoenix-primary rounded-pill">{{ user.age }}</span></li>

                    </ul>
                </div>




            </div>

        </div>
        <footer class="footer position-absolute">
            <div class="row g-0 justify-content-between align-items-center h-100">
                <div class="col-12 col-sm-auto text-center">
                    <p class="mb-0 mt-2 mt-sm-0 text-body">Thank you for creating with Phoenix<span class="d-none d-sm-inline-block"></span><span class="d-none d-sm-inline-block mx-1">|</span><br class="d-sm-none" />2023 &copy;<a class="mx-1" href="https://themewagon.com/">Themewagon</a></p>
                </div>
                <div class="col-12 col-sm-auto text-center">
                    <p class="mb-0 text-body-tertiary text-opacity-85">v1.14.0</p>
                </div>
            </div>
        </footer>
    </div>

{% endblock %}