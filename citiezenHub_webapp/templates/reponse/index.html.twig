{% extends 'index.html.twig' %}

{% block title %}
    Purchasers and Sellers
{% endblock %}

{% block body %}
    <div class="content">
        <div class="pb-9">
            <h2 class="mb-4">
                Purchasers and Sellers
            </h2>
            <!-- Add the response statistic here -->
