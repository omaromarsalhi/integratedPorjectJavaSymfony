                                                    <td class="fs-9 align-middle py-0">
                                                        <div class="form-check mb-0 fs-8">
                                                            <input class="form-check-input" type="checkbox" data-bulk-select-row='{"dealsName":"{{ reclamation.id }}"}'></div>
                                                        </td>
                                                        <td>
                                                            {% if reclamation.getImage() %}
                                                                <img src="{{ asset('usersImg/' ~ reclamation.getImage()) }}" alt="Nft_Portfolio" style="width: 50px; height: 50px; object-fit: cover;"/>
