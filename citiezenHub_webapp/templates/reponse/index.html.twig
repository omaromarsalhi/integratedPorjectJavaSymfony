                        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                        <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const ctx = document.getElementById('myChart').getContext('2d');
            const labels = {{ labels|json_encode|raw }};
            const counts = {{ counts|json_encode|raw }};
            const responseCounts = {{ responseCounts|json_encode|raw }};
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [
                        {
                            label: '# of Reclamations by Date',
                            data: counts,
                            backgroundColor: 'rgba(54, 162, 235, 0.2)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        },
                        {
                            label: '# of Responses by Date',
                            data: responseCounts,
                            backgroundColor: 'rgba(255, 99, 132, 0.2)',
                            borderColor: 'rgba(255, 99, 132, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
                        <script>
        document.addEventListener('DOMContentLoaded', () => {
            const addResponseBtns = document.querySelectorAll('.add-response-btn');
            const responseModal = new bootstrap.Modal(document.getElementById('addResponseModal'));

            addResponseBtns.forEach(btn => {
                btn.addEventListener('click', (e) => {
                    e.preventDefault();
                    const reclamationId = btn.getAttribute('data-reclamation-id');
                    const subject = btn.getAttribute('data-reclamation-subject');
                    const description = btn.getAttribute('data-reclamation-description');

                    document.getElementById('reclamationId').value = reclamationId;
                    document.getElementById('reclamationSubject').textContent = subject;
                    document.getElementById('reclamationDescription').textContent = description;

                    responseModal.show();
                });
            });

            document.getElementById('responseForm').addEventListener('submit', function(e) {
                e.preventDefault();
                const reclamationId = document.getElementById('reclamationId').value;
                const responseText = document.getElementById('responseText').value;

                $.ajax({
                    url: '/reclamation/' + reclamationId + '/add-response',
                    method: 'POST',
                    data: {
                        response: responseText
                    },
                    success: function(response) {
                        $('#alert').html('<div class="alert alert-subtle-success" role="alert">Reponse  Sent successfully!!!</div>');
                        setTimeout(function() {
                            $('#alert').empty();
                        }, 4000);                          responseModal.hide();
                        // Update the table row with the new response
                        var rowToUpdate = document.querySelector('tr[data-reclamation-id="' + reclamationId + '"]');
                        var responseCell = rowToUpdate.querySelector('.response-cell-class');
                        responseCell.textContent = response.newResponse || 'Done';
                        responseCell.classList.remove('badge-phoenix-danger');
                        responseCell.classList.add('badge-phoenix-success');
                    },
                    error: function(xhr, status, error) {
                        if (xhr.responseJSON && xhr.responseJSON.error === 'VALIDATION_ERROR') {
                            const errorMessage = xhr.responseJSON.messages.join(', ');
                            const errorMessagesArray = errorMessage.split(',');
                            let errorMessagesHTML = '';
                            errorMessagesArray.forEach((message) => {
                                errorMessagesHTML += `<div>${message.trim()}</div>`;
                            });
                            document.querySelector('.error-label').innerHTML = errorMessagesHTML;
                        } else {

                            var errorMessage = 'An error occurred';
                            if (xhr.responseJSON && xhr.responseJSON.error) {
                                errorMessage = xhr.responseJSON.error;
                            }
                            $('#alert').html(' <div class="alert alert-subtle-danger" role="alert">An error occured while Sening reponse!</div>');
                            setTimeout(function() {
                                $('#alert').empty();
                            }, 4000);
                        }
                    }
                });
            });
        });
    </script>
                        <script>
        document.addEventListener('DOMContentLoaded', () => {
            const reclamationDetailsModal = document.getElementById('reclamationDetailsModal');
            reclamationDetailsModal.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const reclamationId = button.getAttribute('data-reclamation-id');
                
                fetch(`/api/reclamations/${reclamationId}`)
                    .then(response => response.json())
                    .then(data => {

                        document.getElementById('reclamationSubject').textContent = data.subject;
                        document.getElementById('reclamationDescription').textContent = data.description;
                        
                        const responsesList = document.getElementById('responsesList');
                        responsesList.innerHTML = '';
                        
                        data.responses.forEach(response => {
                            const listItem = document.createElement('li');
                            listItem.className = 'list-group-item';
                            listItem.textContent = response.description;
                            responsesList.appendChild(listItem);
                        });
                    })
                    .catch(error => console.error('Error:', error));
            });
        });
        </script>
        <script>
            document.addEventListener('DOMContentLoaded', () => {
                const removeReclamationBtns = document.querySelectorAll('.remove-reclamation-btn');
            
                removeReclamationBtns.forEach(btn => {
                    btn.addEventListener('click', function (e) {
                        e.preventDefault();
                        const reclamationId = this.getAttribute('data-reclamation-id');
                        
                        if (confirm('Are you sure you want to delete this reclamation and its responses?')) {
                            fetch(`/reclamation/delete/${reclamationId}`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                    'X-Requested-With': 'XMLHttpRequest'
                                },
                                body: JSON.stringify({ _method: 'DELETE' }) // Add CSRF token if necessary
                            })
                            .then(response => {
                                if (response.ok) {
                                    $('#alert').html('<div class="alert alert-subtle-success" role="alert">Response Deleted successfully!!!</div>');
                                    setTimeout(function() {
                                        $('#alert').empty();
                                    }, 4000);
                                    // Optionally, remove the row from the table
                                    document.querySelector(`tr[data-reclamation-id="${reclamationId}"]`).remove();
                                } else {
                                    $('#alert').html('<div class="alert alert-subtle-danger" role="alert">Error while updating Response!!!</div>');
                                    setTimeout(function() {
                                        $('#alert').empty();
                                    }, 4000);                                     }
                            })
                            .catch(error => {
                                $('#alert').html('<div class="alert alert-subtle-danger" role="alert">Error while updating Reponse!!!</div>');
                                setTimeout(function() {
                                    $('#alert').empty();
                                }, 4000);
                            });
                        }
                    });
                });
            });
            
        </script>
