<!-- Bootstrap CSS -->


<div class="tab-pane  lg-product_tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">

	{% for index,reclamation in reclamations %}
		<div id="reclamationItem{{ reclamation.id }}" class="lg-product-wrapper">
			<div class="inner">
				<div class="lg-left-content">
					<a href="product-details.html" class="thumbnail">
						<img src="{{ asset('usersImg/'~reclamation.getImage()) }}" alt="Nft_Portfolio"/>
					</a>
					<div class="read-content">
						<div class="product-share-wrapper">
							<div class="profile-share">
								<a href="author.html" class="avatar" data-tooltip="Farik Shaikh" tabindex="0"><img src="../../assets/images/client/client-1.png" alt="Nft_Profile"/></a>

								<a class="more-author-text" href="#" tabindex="0">Mr
									{{ app.user.firstName }}</a>
							</div>
						</div>
						<a href="javascript:void(0);" onclick="showReclamationDetails('{{ reclamation.id }}', event)">
							<h6 class="title">{{ reclamation.subject }}</h6>
						</a>

						<h3 class="title">{{reclamation.privateKey}}
						</h3>
						<span class="latest-bid">{{ reclamation.description}}</span>
						<div class="share-wrapper d-flex">
							<div
								class="react-area mr--15">
								<!-- composer require nesbot/carbon -->
								<span class="number">{{ reclamation.date|date('Y-m-d\TH:i:sP')|time_ago}}</span>
							</div>
						</div>
					</div>
				</div>
				<a href="javascript:void(0);" id="deleteReclamation{{ reclamation.id }}" class="btn btn-primary-alta pdfBtn" onclick="deletee('{{ reclamation.id }}', event)">
					<span class="text_pdf">Delete</span>
					<i class="fa-regular fa-trash-can"></i>
				</a>
			</div>
		</div>
	{% endfor %}

</div>
<!-- Reclamation Detail Modal -->
<div class="modal fade" id="reclamationDetailModal" tabindex="-1" aria-labelledby="reclamationDetailModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="reclamationDetailModalLabel">Reclamation Details</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div
				class="modal-body">
				<!-- Content will be loaded dynamically -->
			<div id="basePath" data-base-path="{{ asset('usersImg/') }}" style="display:none;"></div>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
<!-- Add an id to the button for easier JS targeting and pass reclamationId when modal is opened -->
<button type="button" class="btn btn-primary" id="updateButton">Update</button>

			</div>
		</div>
	</div>
</div>

<!-- Bootstrap Bundle JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<style>
    .modal-content {
      background-color: #2c3034; /* Dark background */
      color: #ffffff; /* White text */
      border: none;
    }

    .modal-header {
      border-bottom: none;
    }

    .modal-footer {
      border-top: none;
    }

    .btn-close {
      filter: invert(1); /* Make the close button white */
    }

    /* Match the font styles from your site */
    .modal-title, .modal-body, .modal-footer {
      font-family: 'Your Font Family', sans-serif;
      /* Your font styles here */
    }
  </style>