{% endblock %}

{% block body %}


    <!-- start page title area -->
    <div class="rn-breadcrumb-inner ptb--30">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-md-6 col-12">
                    <h5 class="title text-center text-md-start">Product Details</h5>
                </div>
                <div class="col-lg-6 col-md-6 col-12">
                    <ul class="breadcrumb-list">
                        <li class="item"><a href="index.html">Home</a></li>
                        <li class="separator"><i class="feather-chevron-right"></i></li>
                        <li class="item current">Product Details</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- end page title area -->

    <!-- start product details area -->
    <div class="product-details-area rn-section-gapTop " style="margin-bottom: 100px !important;">
        <div class="container">
            <div class="row g-5">
                <!-- product image area -->

                <div class="col-lg-7 col-md-12 col-sm-12">
                    <div class="product-tab-wrapper rbt-sticky-top-adjust">
                        <div class="pd-tab-inner">
                            <div
                                    class="nav rn-pd-nav rn-pd-rt-content nav-pills justify-content-start"
                                    id="v-pills-tab"
                                    role="tablist"
                                    aria-orientation="vertical"
                            >
                                {% set size=0 %}
                                {% for index,image in product.images %}
                                    <button
                                            {% if index==0 %}
                                                class="nav-link  active"
                                            {% else %}
                                                class="nav-link  "
                                            {% endif %}
                                            id="image_{{ index }}"
                                            data-bs-toggle="pill"
                                            data-bs-target="#v-pills_{{ index }}"
                                            type="button"
                                            role="tab"
                                            aria-selected="true"
                                    >
                                    <span class="rn-pd-sm-thumbnail">
                                      <img
                                              src="{{ asset(image.path)|default("Not available") }}"
                                              class="fixedSubImagesSize4Details"
                                              alt="Nft_Profile"
                                      />
                                    </span>
                                    </button>
                                    {% set size=size+1 %}
                                {% endfor %}
                            </div>

                            <div class="tab-content rn-pd-content" id="v-pills-tabContent">
                                {% set size=size-1 %}
                                {% for i in 0..size %}
                                    <div
                                            {% if i==0 %}
                                                class="tab-pane fade show active"
                                            {% else %}
                                                class="tab-pane fade"
                                            {% endif %}
                                            id="v-pills_{{ i }}"
                                            role="tabpanel"
                                            aria-labelledby="image_{{ i }}"
                                    >
                                        <div class="rn-pd-thumbnail">
                                            <img
                                                    src="{{ asset(product.images[i].path)|default("Not available") }}"
                                                    class="fixedImagesSize4Details"
                                                    alt="Nft_Profile"
                                            />
                                        </div>
                                    </div>
                                {% endfor %}

                            </div>
                        </div>
                    </div>
                </div>
                <!-- product image area end -->

                <div class="col-lg-5 col-md-12 col-sm-12" style="margin-top: 50px !important;">
                    <div class="rn-pd-content-area">
                        <div class="pd-title-area">
                            <h4 class="title">{{ product.name|capitalize }}</h4>
                            <div class="pd-react-area">
                                <div class="count">
                                    <div class="share-btn share-btn-activation dropdown">
                                        <button
                                                class="icon"
                                                type="button"
                                                data-bs-toggle="dropdown"
                                                aria-expanded="false"
                                        >
                                            <svg
                                                    viewBox="0 0 14 4"
                                                    fill="none"
                                                    width="16"
                                                    height="16"
                                                    class="sc-bdnxRM sc-hKFxyN hOiKLt"
                                            >
                                                <path
                                                        fill-rule="evenodd"
                                                        clip-rule="evenodd"
                                                        d="M3.5 2C3.5 2.82843 2.82843 3.5 2 3.5C1.17157 3.5 0.5 2.82843 0.5 2C0.5 1.17157 1.17157 0.5 2 0.5C2.82843 0.5 3.5 1.17157 3.5 2ZM8.5 2C8.5 2.82843 7.82843 3.5 7 3.5C6.17157 3.5 5.5 2.82843 5.5 2C5.5 1.17157 6.17157 0.5 7 0.5C7.82843 0.5 8.5 1.17157 8.5 2ZM11.999 3.5C12.8274 3.5 13.499 2.82843 13.499 2C13.499 1.17157 12.8274 0.5 11.999 0.5C11.1706 0.5 10.499 1.17157 10.499 2C10.499 2.82843 11.1706 3.5 11.999 3.5Z"
                                                        fill="currentColor"
                                                ></path>
                                            </svg>
                                        </button>

                                        <div
                                                class="share-btn-setting dropdown-menu dropdown-menu-end"
                                        >
                                           <!--{# <a
                                                    href=""
                                                    type="button"
                                                    class="btn-setting-text share-text d-flex"
                                            >
                                                Update
                                                <i class="ms-4  fa-solid fa-pen-to-square"
                                                   style="margin-top: 0.5px"></i>
                                                Delete
                                                <i class="ms-4  fa-solid fa-trash" style="margin-top: 0.5px"></i>

                                            </a>#}-->
                                            <button
                                                    type="button"
                                                    class="btn-setting-text report-text"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#reportModal"
                                            >
                                                report
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--{#                        <h6 class="title-name">#22 Portal , Info bellow</h6> #}-->

                        <div class="news-details">
                            <br>
                            <h4>Description:</h4>
                            <p style="max-width: 800px;  word-wrap: break-word;">{{ product.description }}.</p>
                            <div class="d-flex justify-content-between align-items-end align-content-end">
                                <h4>Category : </h4>
                                <h6>{{ product.category|capitalize }} </h6>
                            </div>
                            <div class="d-flex justify-content-between align-items-end align-content-end">
                                <h4>Price : </h4>
                                <h6>{{ product.price }} Dt </h6>
                            </div>
                            <div class="d-flex justify-content-between align-items-end align-content-end">
                                <h4>Quantity : </h4>
                                <h6>{{ product.quantity }} Pieces </h6>
                            </div>
                            <div class="d-flex justify-content-between align-items-end align-content-end">
                                <h4>State : </h4>
                                <h6 class="align-items-end align-content-end">In Stock </h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End product details area -->


{% endblock %}



